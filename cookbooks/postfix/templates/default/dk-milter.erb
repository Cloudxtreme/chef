PORT="inet:10035@localhost"
SIGNING_DOMAIN="mail.example.com"
KEYNAME="mail.example.com"
SELECTOR_NAME="default"
KEYFILE="/etc/mail/domainkeys/dk_${KEYNAME}.pem"
SIGNER=yes
VERIFIER=no
CANON=simple
REJECTION="bad=r,dns=t,int=t,no=a,miss=r"
TRUSTED_HOSTS="/etc/mail/domainkeys/trusted-hosts"
EXTRA_ARGS="-h -l -D -i $TRUSTED_HOSTS"
MILTER_GROUP="mail"

